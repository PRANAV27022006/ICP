class Solution {
public:
    int eraseOverlapIntervals(vector<vector<int>>& intervals) {
        sort(intervals.begin(), intervals.end(), [](vector<int>& a , vector<int>& b){ 
            return a[1]<b[1]; 
        });
        int remove=0;
        int lastEnd=INT_MIN;
        for(auto& interval: intervals){
            int start= interval[0];
            int end= interval[1];
            if(start>=lastEnd){
                lastEnd= end;
            }else{
                remove++;
            }
        }return remove;
    }
};
