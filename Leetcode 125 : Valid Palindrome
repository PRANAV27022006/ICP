class Solution {
public:
    bool isPalindrome(string s) {
        string str;
        
        for(int i=0;i<s.length();i++){
            if((s[i]>='0' && s[i]<='9' )||( s[i]>='a' && s[i]<'z')||( s[i]>='A' && s[i]<'Z')){
                str+=tolower(s[i]);
            }
        }
        int st=0;
        int end=str.length()-1;
        while(st<=end){
            if(str[st++]!=str[end--]) return false;
        }
        return true;

    }
};


//another way of writing this code
class Solution {
    private:
    bool isalphanume(char ch ){
           if((ch>='0' && ch<='9' )||( tolower(ch)>='a' && tolower(ch)<='z')){
                return true;
            }
            else {
                return false;
            }
}
 public:
    bool isPalindrome(string str) {
        int st=0;
        int end=str.length()-1;
        while(st<=end){
            if(!isalphanume(str[st]))  {
                st++;
                continue;
            }
            if(!isalphanume(str[end])) {
                end--;
                continue;
            }
            if(tolower(str[st++])!=tolower(str[end--]))
                return false;
        
        }
       return true;
    }
};


// by using inbuilt isalnum function
class Solution {
public:
    bool isPalindrome(string str) {
        int st=0;
        int end=str.length()-1;
        while(st<=end){
            if(!isalnum(str[st]))  {
                st++;
                continue;
            }
            if(!isalnum(str[end])) {
                end--;
                continue;
            }
            if(tolower(str[st++])!=tolower(str[end--]))
                return false;
        
        }
       return true;
    }
};
